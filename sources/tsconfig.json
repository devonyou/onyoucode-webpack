{
	"compilerOptions": {
		"allowJs": true,
		"module": "ES6",
		"target": "ES6",
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "Node",
		"lib": ["ES6", "DOM", "DOM.Iterable"],
		"noImplicitAny": false,
		"typeRoots": ["./node_modules/@types", "./@types"],
		"esModuleInterop": true,
		"strict": false
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
